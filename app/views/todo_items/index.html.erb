<div class="jumbotron">
        <div class="container text-center">
<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= todo_item.due_date %></td>
        <td><%= link_to 'Show', todo_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button href="#" class="btn btn-block btn-primary btn-default"><%= link_to 'New Todo Item', new_todo_item_path %></button>
</div>
</div>
